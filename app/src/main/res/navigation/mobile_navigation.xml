<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <action android:id="@+id/action_global_scanningFragment"
        app:destination="@+id/nav_scanner"
        app:launchSingleTop="true"/>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.bikecomputerfirstdraft.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.bikecomputerfirstdraft.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.bikecomputerfirstdraft.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_add_sensor"
        android:name="com.example.bikecomputerfirstdraft.ui.addSensor.AddSensorFragment"
        android:label="@string/menu_addSensor"
        tools:layout="@layout/flare_rt" />
    <fragment
        android:id="@+id/nav_scanner"
        android:name="com.example.bikecomputerfirstdraft.ui.scanner.ScannerFragment"
        android:label="@string/menu_scanner"
        tools:layout="@layout/fragment_scanner" />

</navigation>